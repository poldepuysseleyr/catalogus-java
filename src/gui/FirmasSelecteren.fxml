      </Button>
      <Button fx:id="btnOk" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#okOnAction" text="OK" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </Button>
      <Button fx:id="btnAnnuleren" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#annulerenOnAction" text="Annuleren" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </Button>
      <ListView fx:id="firmas" onMouseClicked="#mouseClickedFirma" prefHeight="279.0" prefWidth="350.0" GridPane.rowIndex="1" />
      <Label fx:id="lblError" maxWidth="1.7976931348623157E308" textFill="RED" GridPane.rowIndex="2">
         <GridPane.margin>
