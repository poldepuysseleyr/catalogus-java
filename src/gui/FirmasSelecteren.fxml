  </rowConstraints>
   <children>
      <Label text="Alle Firmas" GridPane.halignment="CENTER" />
      <Button fx:id="firmaToevoegen" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#firmaToevoegen" text="Firma Toevoegen" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
